{
  "title": "HFSS Live Platform Dashboard",
  "description": "Real-time monitoring of HFSS Live tracking platform",
  "widgets": [
    {
      "id": 1,
      "definition": {
        "title": "Platform Health Status",
        "type": "check_status",
        "check": "hfss.platform.health",
        "grouping": "cluster",
        "tags": ["service:hfss-live"]
      },
      "layout": {"x": 0, "y": 0, "width": 4, "height": 2}
    },
    {
      "id": 2,
      "definition": {
        "title": "Messages Per Second",
        "type": "timeseries",
        "requests": [
          {
            "q": "avg:hfss.live.messages_per_second{*}",
            "display_type": "line",
            "style": {
              "palette": "dog_classic",
              "line_type": "solid",
              "line_width": "normal"
            }
          }
        ],
        "yaxis": {"include_zero": true}
      },
      "layout": {"x": 4, "y": 0, "width": 4, "height": 2}
    },
    {
      "id": 3,
      "definition": {
        "title": "Active Flights & Devices",
        "type": "query_value",
        "requests": [
          {
            "q": "avg:hfss.live.active_flights{*}",
            "aggregator": "last"
          },
          {
            "q": "avg:hfss.live.active_devices{*}",
            "aggregator": "last"
          }
        ],
        "precision": 0
      },
      "layout": {"x": 8, "y": 0, "width": 4, "height": 2}
    },
    {
      "id": 4,
      "definition": {
        "title": "Queue Health Overview",
        "type": "timeseries",
        "requests": [
          {
            "q": "sum:hfss.queue.pending{*} by {queue_type}",
            "display_type": "bars",
            "style": {"palette": "warm"}
          }
        ],
        "yaxis": {"include_zero": true}
      },
      "layout": {"x": 0, "y": 2, "width": 6, "height": 3}
    },
    {
      "id": 5,
      "definition": {
        "title": "Dead Letter Queue Items",
        "type": "query_value",
        "requests": [
          {
            "q": "sum:hfss.queue.dlq_size{*}",
            "aggregator": "last",
            "conditional_formats": [
              {"comparator": ">", "value": 0, "palette": "red"},
              {"comparator": "<=", "value": 0, "palette": "green"}
            ]
          }
        ],
        "precision": 0
      },
      "layout": {"x": 6, "y": 2, "width": 3, "height": 3}
    },
    {
      "id": 6,
      "definition": {
        "title": "Processing Errors",
        "type": "timeseries",
        "requests": [
          {
            "q": "sum:hfss.live.points_failed{*}.as_rate()",
            "display_type": "line",
            "style": {"palette": "red"}
          }
        ]
      },
      "layout": {"x": 9, "y": 2, "width": 3, "height": 3}
    },
    {
      "id": 7,
      "definition": {
        "title": "Database Connections",
        "type": "timeseries",
        "requests": [
          {
            "q": "avg:hfss.database.connections_active{*}",
            "display_type": "line",
            "style": {"palette": "purple"}
          },
          {
            "q": "avg:hfss.database.connections_idle{*}",
            "display_type": "line",
            "style": {"palette": "gray"}
          }
        ],
        "yaxis": {"include_zero": true}
      },
      "layout": {"x": 0, "y": 5, "width": 4, "height": 3}
    },
    {
      "id": 8,
      "definition": {
        "title": "GPS TCP Server Status",
        "type": "timeseries",
        "requests": [
          {
            "q": "avg:hfss.gps_tcp.active_connections{*}",
            "display_type": "line"
          },
          {
            "q": "sum:hfss.gps_tcp.messages_per_second{*}",
            "display_type": "line"
          }
        ]
      },
      "layout": {"x": 4, "y": 5, "width": 4, "height": 3}
    },
    {
      "id": 9,
      "definition": {
        "title": "API Response Times (p95)",
        "type": "timeseries",
        "requests": [
          {
            "q": "avg:hfss.api.response_time{*} by {endpoint}.rollup(avg, 60)",
            "display_type": "line"
          }
        ],
        "yaxis": {"include_zero": false, "scale": "log"}
      },
      "layout": {"x": 8, "y": 5, "width": 4, "height": 3}
    },
    {
      "id": 10,
      "definition": {
        "title": "Recent Platform Events",
        "type": "event_stream",
        "query": "tags:service:hfss-live",
        "event_size": "s"
      },
      "layout": {"x": 0, "y": 8, "width": 6, "height": 3}
    },
    {
      "id": 11,
      "definition": {
        "title": "Table Sizes (Rows)",
        "type": "toplist",
        "requests": [
          {
            "q": "top(avg:hfss.database.table_size{*} by {table}, 10)"
          }
        ]
      },
      "layout": {"x": 6, "y": 8, "width": 3, "height": 3}
    },
    {
      "id": 12,
      "definition": {
        "title": "Upload Processing",
        "type": "timeseries",
        "requests": [
          {
            "q": "sum:hfss.upload.files_uploaded{*}.as_rate()",
            "display_type": "bars",
            "style": {"palette": "blue"}
          }
        ]
      },
      "layout": {"x": 9, "y": 8, "width": 3, "height": 3}
    }
  ],
  "template_variables": [],
  "layout_type": "free",
  "notify_list": []
}