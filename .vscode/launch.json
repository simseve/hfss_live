{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app:app",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true,  // Add this
            "cwd": "${workspaceFolder}",  // Add this
            "env": {
                "PYTHONPATH": "${workspaceFolder}"  // Add this
            }
        }
    ]
}